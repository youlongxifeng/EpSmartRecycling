<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_loading_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:background="@drawable/bg_dialog"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/x_10"
        android:paddingLeft="@dimen/x_20"
        android:paddingRight="@dimen/x_20"
        android:paddingTop="@dimen/x_20">

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="@dimen/x_120"
            android:layout_height="@dimen/x_120"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/dialog_loading"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/tipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x_30"
            android:text="加载中"
            android:textColor="@color/color_theme_ffffff"
            android:textSize="@dimen/x_24" />
    </LinearLayout>

</LinearLayout>